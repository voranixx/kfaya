    <!-- Firebase SDK -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js";
        import { getAuth, createUserWithEmailAndPassword, signInWithEmailAndPassword, signOut, onAuthStateChanged, GoogleAuthProvider, signInWithPopup, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-auth.js";
        import { getFirestore, doc, setDoc, getDoc } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyAh8jZMcfdvmcEOcIYLLLLzMIWAwFHsVps",
            authDomain: "voranixx.firebaseapp.com",
            projectId: "voranixx",
            storageBucket: "voranixx.firebasestorage.app",
            messagingSenderId: "625727844363",
            appId: "1:625727844363:web:cc45b79bb0076013a6970e",
            measurementId: "G-LKH52SDWE6"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const provider = new GoogleAuthProvider();

        let currentUser = null;
        let isApproved = false;

        // إرسال إشعار للمسؤول عبر EmailJS
        window.sendEmailNotification = function(name, email) {
            if (typeof emailjs === 'undefined') {
                console.error('EmailJS not loaded');
                return;
            }
            emailjs.send('voranixx', 'template_nl9txwt', {
                title: 'New User Registration',
                name: name,
                message: `New user registered: ${email}. Please approve or reject this user in Firebase console.`
            }).then(() => {
                console.log('Email sent to admin');
            }).catch(err => {
                console.error('Email sending failed:', err);
            });
        };

        // معالجة التسجيل/الدخول
        window.handleAuth = async function() {
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();
            const isLogin = document.getElementById('authTitle').innerText === 'Sign In';
            const fullName = document.getElementById('fullName').value.trim();
            const messageDiv = document.getElementById('authMessage');
            const authButton = document.getElementById('authButton');

            if (!email || !password) {
                showMessage('Please fill in all fields', 'error');
                return;
            }
            if (!isLogin && !fullName) {
                showMessage('Please enter your full name', 'error');
                return;
            }

            authButton.disabled = true;
            authButton.innerText = 'Processing...';

            try {
                if (isLogin) {
                    const userCredential = await signInWithEmailAndPassword(auth, email, password);
                    const user = userCredential.user;
                    const userDoc = await getDoc(doc(db, 'users', user.uid));
                    if (userDoc.exists() && userDoc.data().approved === true) {
                        closeLoginModal();
                        showServices();
                    } else {
                        await signOut(auth);
                        document.getElementById('pendingModal').classList.add('active');
                    }
                } else {
                    const userCredential = await createUserWithEmailAndPassword(auth, email, password);
                    const user = userCredential.user;
                    await setDoc(doc(db, 'users', user.uid), {
                        name: fullName,
                        email: email,
                        approved: false,
                        timestamp: new Date().toISOString()
                    });
                    sendEmailNotification(fullName, email);
                    await signOut(auth);
                    showMessage('Registration successful! Please wait for admin approval.', 'success');
                    toggleAuthMode(); // العودة لوضع تسجيل الدخول بعد التسجيل
                }
            } catch (error) {
                showMessage(error.message, 'error');
            } finally {
                authButton.disabled = false;
                authButton.innerText = isLogin ? 'Sign In' : 'Sign Up';
            }
        };

        // تسجيل الدخول بجوجل
        window.googleLogin = async function() {
            try {
                const result = await signInWithPopup(auth, provider);
                const user = result.user;
                const userDoc = await getDoc(doc(db, 'users', user.uid));
                if (!userDoc.exists()) {
                    // مستخدم جديد
                    await setDoc(doc(db, 'users', user.uid), {
                        name: user.displayName || 'Google User',
                        email: user.email,
                        approved: false,
                        timestamp: new Date().toISOString()
                    });
                    sendEmailNotification(user.displayName || 'Google User', user.email);
                    await signOut(auth);
                    showMessage('Registration successful! Please wait for admin approval.', 'success');
                    closeLoginModal();
                } else {
                    if (userDoc.data().approved === true) {
                        closeLoginModal();
                        showServices();
                    } else {
                        await signOut(auth);
                        document.getElementById('pendingModal').classList.add('active');
                    }
                }
            } catch (error) {
                showMessage(error.message, 'error');
            }
        };

        // إعادة تعيين كلمة المرور
        window.forgotPassword = function() {
            closeLoginModal();
            document.getElementById('forgotModal').classList.add('active');
        };

        window.sendResetEmail = async function() {
            const email = document.getElementById('resetEmail').value.trim();
            const messageDiv = document.getElementById('forgotMessage');
            if (!email) {
                messageDiv.innerHTML = '<div class="error-message">Please enter your email</div>';
                return;
            }
            try {
                await sendPasswordResetEmail(auth, email);
                messageDiv.innerHTML = '<div class="success-message">Password reset email sent! Check your inbox.</div>';
                setTimeout(() => {
                    closeForgotModal();
                    openLoginModal();
                }, 3000);
            } catch (error) {
                messageDiv.innerHTML = `<div class="error-message">${error.message}</div>`;
            }
        };

        window.closeForgotModal = function() {
            document.getElementById('forgotModal').classList.remove('active');
            document.getElementById('forgotMessage').innerHTML = '';
            document.getElementById('resetEmail').value = '';
        };

        window.openLoginModal = function() {
            document.getElementById('loginModal').classList.add('active');
        };

        function showMessage(text, type) {
            const msgDiv = document.getElementById('authMessage');
            msgDiv.innerHTML = `<div class="${type === 'error' ? 'error-message' : 'success-message'}">${text}</div>`;
            setTimeout(() => msgDiv.innerHTML = '', 5000);
        }

        window.toggleAuthMode = function() {
            const isLogin = document.getElementById('authTitle').innerText === 'Sign In';
            if (isLogin) {
                // التبديل إلى وضع التسجيل
                document.getElementById('authTitle').innerText = 'Sign Up';
                document.getElementById('authSubtitle').innerText = 'Create your account';
                document.getElementById('authButton').innerText = 'Sign Up';
                document.getElementById('toggleAuthText').innerText = 'Already have an account?';
                document.getElementById('toggleAuthLink').innerText = 'Sign In';
                document.getElementById('fullNameGroup').style.display = 'flex';
            } else {
                // التبديل إلى وضع تسجيل الدخول
                document.getElementById('authTitle').innerText = 'Sign In';
                document.getElementById('authSubtitle').innerText = 'Access your VORANIX account';
                document.getElementById('authButton').innerText = 'Sign In';
                document.getElementById('toggleAuthText').innerText = 'Don\'t have an account?';
                document.getElementById('toggleAuthLink').innerText = 'Sign Up';
                document.getElementById('fullNameGroup').style.display = 'none';
            }
        };

        window.logout = async function() {
            await signOut(auth);
            hideServices();
            document.getElementById('userInfo').style.display = 'none';
            window.location.reload();
        };

        onAuthStateChanged(auth, async (user) => {
            if (user) {
                const userDoc = await getDoc(doc(db, 'users', user.uid));
                if (userDoc.exists() && userDoc.data().approved === true) {
                    currentUser = user;
                    isApproved = true;
                    document.getElementById('userName').innerText = userDoc.data().name || user.email;
                    document.getElementById('userInfo').style.display = 'flex';
                } else {
                    await signOut(auth);
                    document.getElementById('pendingModal').classList.add('active');
                }
            } else {
                currentUser = null;
                isApproved = false;
                document.getElementById('userInfo').style.display = 'none';
                hideServices();
            }
        });

        window.closeLoginModal = function() {
            document.getElementById('loginModal').classList.remove('active');
        };

        window.exploreSite = async function() {
            if (!currentUser) {
                document.getElementById('loginModal').classList.add('active');
                return;
            }
            if (!isApproved) {
                document.getElementById('pendingModal').classList.add('active');
                return;
            }
            showServices();
        };

        function showServices() {
            document.getElementById('services').style.display = 'block';
            setTimeout(() => document.getElementById('services').classList.add('show'), 50);
            document.getElementById('footer').style.display = 'block';
            setTimeout(() => document.getElementById('footer').classList.add('show'), 300);
            document.getElementById('miniPlayer').classList.add('show');
        }

        function hideServices() {
            document.getElementById('services').style.display = 'none';
            document.getElementById('footer').style.display = 'none';
            document.getElementById('miniPlayer').classList.remove('show');
        }

        document.getElementById('exploreButton').addEventListener('click', exploreSite);
    </script>

    <!-- EmailJS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    <script type="text/javascript">
        (function() {
            emailjs.init('YOUR_PUBLIC_KEY'); // ضع public key الخاص بك من EmailJS
        })();
    </script>

